@model EditRolesViewModel

<link rel="stylesheet" href="~/css/vehiculos.css" />
<h2>Editar Roles para @Model.UserName</h2>

<form asp-action="EditRoles">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="UserName" />

    <div class="form-group">
        <label>Roles:</label>
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="@role" name="SelectedRoles" value="@role" 
                       @(Model.UserRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label" for="@role">@role</label>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}