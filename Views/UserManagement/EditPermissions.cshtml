@model EditPermissionsViewModel
<link rel="stylesheet" href="~/css/vehiculos.css" />
<h2>Editar Permisos para @Model.UserName</h2>

<form asp-action="EditPermissions">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="UserName" />

    <div class="form-group">
        <label>Permisos:</label>
        @foreach (var permission in new[] { "CrearEntrada", "EditarEntrada", "EliminarEntrada", "VerReportes" })
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="@permission" name="Permissions" value="@permission" 
                       @(Model.Permissions.Contains(permission) ? "checked" : "") />
                <label class="form-check-label" for="@permission">@permission</label>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}