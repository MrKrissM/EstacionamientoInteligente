@model EstacionamientoInteligente.Models.Salida

<h2>Detalle de Pago</h2>

<div>
    <h4>Vehículo: @Model.Vehiculo.Placa</h4>
    <p>Hora de Entrada: @Model.Vehiculo.HoraEntrada</p>
    <p>Hora de Salida: @Model.Vehiculo.HoraSalida</p>
    <p>Duración: @((Model.Vehiculo.HoraSalida.Value - Model.Vehiculo.HoraEntrada).TotalMinutes) minutos</p>
    <p>Monto a Pagar: $@Model.MontoAPagar</p>
</div>

<a asp-action="Index" class="btn btn-primary">Volver</a>