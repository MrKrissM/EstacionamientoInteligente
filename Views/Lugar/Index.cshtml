@model IEnumerable<EstacionamientoInteligente.Models.Lugar>

@{
    ViewData["Title"] = "Estacionamiento";
}
<link rel="stylesheet" href="~/css/vehiculos.css" />

<h1>Estacionamiento</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success">@TempData["Exito"]</div>
}

<div class="container">
    <div class="row">
        @foreach (var item in Model.OrderBy(l => l.Numero).Take(20))
        {
            <div class="col-md-3 mb-3">
                <div class="card @(item.Ocupado ? "bg-danger" : "bg-success") text-white">
                    <div class="card-body">
                        <h5 class="card-title">Lugar @item.Numero</h5>
                        <p class="card-text">
                            Estado: @(item.Ocupado ? "Ocupado" : "Libre")
                        </p>
                        @if (item.Ocupado && item.Vehiculo != null)
                        {
                            <p class="card-text">Veh√≠culo: @item.Vehiculo.Placa</p>
                        }
                        <div class="mt-2">
                            @if (!item.Ocupado)
                            {
                                <a asp-controller="Lugar" asp-action="MarcarOcupado" asp-route-id="@item.Id"
                                    class="btn btn-light">Marcar como Ocupado</a>
                            }
                            else
                            {
                                <a asp-controller="Lugar" asp-action="MarcarLibre" asp-route-id="@item.Id"
                                    class="btn btn-light">Marcar como Libre</a>
                                <form asp-controller="Vehiculo" asp-action="RegistrarSalida" method="post" class="mt-2">
                                    <input type="hidden" name="placa" value="@item.Vehiculo?.Placa" />
                                    <button type="submit" class="btn btn-light">Registrar Salida</button>
                                </form>
                            }
                           
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>