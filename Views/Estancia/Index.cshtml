@model IEnumerable<EstacionamientoInteligente.Models.Lugar>

<h2>Estado de Estacionamiento</h2>

<table class="table">
    <thead>
        <tr>
            <th>Número de Lugar</th>
            <th>Estado</th>
            <th>Vehículo</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lugar in Model)
        {
            <tr>
                <td>@lugar.Id</td>
                <td>@(lugar.Ocupado ? "Ocupado" : "Libre")</td>
                <td>@(lugar.Vehiculo?.Placa ?? "-")</td>
                <td>
                    @if (!lugar.Ocupado)
                    {
                        <form asp-action="OcuparLugar" method="post">
                            <input type="hidden" name="lugarId" value="@lugar.Id" />
                            <input type="text" name="placa" placeholder="Placa del vehículo" required />
                            <button type="submit">Ocupar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>