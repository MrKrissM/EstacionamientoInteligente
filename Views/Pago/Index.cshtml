@model IEnumerable<EstacionamientoInteligente.Models.Pago>

@{
    ViewData["Title"] = "Registros de Salida";
}
<link rel="stylesheet" href="~/css/reporte.css" />

<div class="reporte-container">
    <h1 class="reporte-title">Registros de Salida</h1>
    <p class="reporte-date">@DateTime.Now.ToString("dd MMMM yyyy")</p>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Vehiculo)</th>
                    <th>Minutos Estacionado</th>
                    <th>@Html.DisplayNameFor(model => model.Monto)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaPago)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Placa)</td>
                        <td>@Html.DisplayFor(modelItem => item.MinutosEstacionado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Monto)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaPago)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="reporte-actions">
        <form asp-action="GenerarReporte" method="get" class="form-inline">
            <div class="form-group mr-2">
                <label for="fecha" class="mr-2">Fecha del Reporte:</label>
                <input type="date" id="fecha" name="fecha" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Descargar Reporte</button>
        </form>
    </div>
</div>