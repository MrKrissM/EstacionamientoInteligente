@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Inicio";
}
<link rel="stylesheet" href="~/css/home.css" />


@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    <div class="logged-in-container">
        <div class="background-pattern"></div>
        <div class="content">
            <h1 class="display-4">Bienvenido a Smart Parking</h1>
            <p class="lead">Experimenta el futuro del estacionamiento con nuestra solución innovadora.</p>
            <img src="~/images/smart-parking-illustration.jpg" alt="Smart Parking" class="img-fluid rounded mt-4">
            <div class="mt-4">
                @* <a href="#" class="btn btn-primary btn-lg rounded-pill">Explorar características</a> *@
                @* <a href="#" class="btn btn-outline-light btn-lg rounded-pill ml-3">Mi cuenta</a> *@
            </div>
        </div>
    </div>
}
else
{
    <div class="home-container">
        <div class="background-cross"></div>
        <div class="content">
            <h1 class="display-4">Bienvenido</h1>
            <p>Al sistema de Estacionamiento Inteligente</p>
            <a asp-controller="Account" asp-action="Login" class="btn-login">Iniciar Sesión</a>
        </div>
    </div>
}