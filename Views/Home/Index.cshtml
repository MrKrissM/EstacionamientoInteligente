@{
    ViewData["Title"] = "Home Page";
}

@if (!string.IsNullOrEmpty(Context.Session.GetString("UserId")))
{
    <div class="container mt-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-8 text-center">
                <h1 class="display-3 text-primary">Welcome to Smart Parking</h1>
                <p class="lead">Experience the future of parking with our innovative solution.</p>
                <img src="~/images/parking.jpg" alt="Smart Parking" class="img-fluid rounded mt-4">
                <a href="#" class="btn btn-primary mt-3">Explore Features</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Bienvenido</h1>
        <p>Por favor, <a asp-controller="Account" asp-action="Login">inicie sesión</a> para acceder al sistema.</p>
    </div>
}
